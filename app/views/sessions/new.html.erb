<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% if logged_in? %>
      <%= link_to "Log out", logout_path, method: :delete, class: "btn btn-primary" %>
    <% else %>
      <%= link_to "Log in", "/auth/twitter", class: "btn btn-primary" %>
      <%= link_to "Sample log in", "/login_sample", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>