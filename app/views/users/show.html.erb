<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= show_icon(@user) %>
        <%= @user.user_name %>
        <%= @atcoder_user.atcoder_id %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if Contest.all.any? %>
      <h3>Contests (<%= Contest.all.count %>)</h3>
      <ol class="contests">
        <%= render @contests %>
      </ol>
      <%= will_paginate @contests %>
    <% end %>
  </div>
</div>