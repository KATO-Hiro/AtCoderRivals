<% provide(:title, @user.user_name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= show_icon(@user) %>
        <%= @user.user_name %>
        <%= @atcoder_user.atcoder_id %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3>Contests (<%= @atcoder_user.contests.size %>)</h3>
    <%= render 'shared/contest_results' %>
  </div>
</div>